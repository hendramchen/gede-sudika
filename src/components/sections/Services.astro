---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Bangun Rumah dari Nol",
    titleBottom: "Dari fondasi hingga atap, semua kami kerjakan dengan rapi dan kuat.",
    img: c1,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Renovasi Rumah",
    titleBottom: "Ubah tampilan rumah Anda jadi lebih segar dan nyaman.",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Pemasangan Lantai & Dinding",
    titleBottom: "Pemasangan keramik, granit, dan tegel dengan hasil presisi.",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Pengecatan Tembok",
    titleBottom: "Cat interior dan eksterior, bersih dan rata.",
    img: c4,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Instalasi Listrik & Pipa",
    titleBottom: "Rapi, aman, dan sesuai standar.",
    img: c5,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Pasang Plafon & Rangka Atap",
    titleBottom: "Baja ringan, gypsum, dan pekerjaan struktur atas lainnya.",
    img: c6,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description =
  "Layanan Jasa Tukang yang Kami Tawarkan";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Layanan Kami" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
