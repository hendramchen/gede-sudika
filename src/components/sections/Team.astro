---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meskipun kami bersaudara, namun kerja kami profesional. Kami siap membantu Anda mewujudkan proyek impian Anda dengan kualitas terbaik.";

// Team images
import p1 from "../../assets/team/team1.png";
import p2 from "../../assets/team/t2.png";
import p3 from "../../assets/team/t3.png";

const team = [
  {
    pic: p1,
    name: "Gede Sudika",
    role: "Kepala Tukang",
    description:
      "Telah memimpin tim selama 10 tahun dengan keahlian dalam manajemen proyek dan pengembangan tim. Memiliki kemampuan komunikasi yang kuat",
    link: "https://linkedin.com",
  },
  {
    pic: p3,
    name: "Kadek Ase",
    role: "Tukang",
    description:
      "Memiliki keahlian pertukangan selama 9 tahun. Berpengalaman dalam berbagai proyek konstruksi dan renovasi",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Luh Widyawati",
    role: "Marketing",
    description:
      "Komunikasi yang efektif dan kemampuan untuk membangun hubungan yang kuat dengan klien.",
    link: "https://linkedin.com",
  },
];
---

<Section id="team">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
  </div>
</Section>
