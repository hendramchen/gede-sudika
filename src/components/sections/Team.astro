---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meet the skilled and experienced team behind our successful digital marketing strategies";

// Team images
import p1 from "../../assets/team/team1.png";
import p2 from "../../assets/team/t2.png";
import p3 from "../../assets/team/t3.png";

const team = [
  {
    pic: p1,
    name: "Gede Sudika",
    role: "Kepala Tukang",
    description:
      "10+ years of experience in digital marketing. Expertise in SEO, PPC, and content strategy",
    link: "https://linkedin.com",
  },
  {
    pic: p3,
    name: "Kadek Ase",
    role: "Tukang",
    description:
      "7+ years of experience in project management and team leadership. Strong organizational and communication skills",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Luh Nyaring",
    role: "Marketing",
    description:
      "5+ years of experience in SEO and content creation. Proficient in keyword research and on-page optimization",
    link: "https://linkedin.com",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
  </div>
</Section>
